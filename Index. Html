  <script>
    // Fade incense smoke as you scroll
    (function () {
      const smoke = document.getElementById("heroSmoke");
      if (!smoke) return;

      function updateSmoke() {
        const y = window.scrollY || window.pageYOffset || 0;
        const opacity = Math.max(0, 1 - y / 340);
        smoke.style.opacity = opacity.toFixed(2);
      }

      updateSmoke();
      window.addEventListener("scroll", updateSmoke, { passive: true });
    })();

    // Nav drawer open/close
    (function () {
      const root = document.documentElement;
      const stone = document.getElementById("navStone");
      const drawer = document.getElementById("navDrawer");
      const backdrop = document.getElementById("navBackdrop");

      function openNav() {
        root.classList.add("nav-open");
      }
      function closeNav() {
        root.classList.remove("nav-open");
      }

      stone.addEventListener("click", openNav);
      backdrop.addEventListener("click", closeNav);

      drawer.querySelectorAll("a.nav-link").forEach((link) => {
        link.addEventListener("click", closeNav);
      });

      // Swipe gestures (open from right edge, close when swiping right)
      let touchX = null;
      let touchFromEdge = false;

      window.addEventListener(
        "touchstart",
        (e) => {
          if (!e.touches || !e.touches.length) return;
          const x = e.touches[0].clientX;
          touchX = x;
          const width = window.innerWidth || 0;
          // start near right edge to open
          touchFromEdge = x > width * 0.82;
        },
        { passive: true }
      );

      window.addEventListener(
        "touchend",
        (e) => {
          if (touchX == null) return;
          const x = (e.changedTouches && e.changedTouches[0].clientX) || touchX;
          const dx = x - touchX;

          if (!root.classList.contains("nav-open") && touchFromEdge && dx < -40) {
            openNav();
          } else if (root.classList.contains("nav-open") && dx > 40) {
            closeNav();
          }

          touchX = null;
          touchFromEdge = false;
        },
        { passive: true }
      );
    })();

    // Book buttons: animate fill on tap and keep WhatsApp link
    (function () {
      document.querySelectorAll(".book-btn").forEach((btn) => {
        btn.addEventListener("touchstart", () => {
          btn.classList.add("btn-filled");
        });
        btn.addEventListener("touchend", () => {
          setTimeout(() => btn.classList.remove("btn-filled"), 230);
        });
        btn.addEventListener("mousedown", () => {
          btn.classList.add("btn-filled");
        });
        btn.addEventListener("mouseup", () => {
          setTimeout(() => btn.classList.remove("btn-filled"), 230);
        });
        btn.addEventListener("mouseleave", () => {
          btn.classList.remove("btn-filled");
        });
      });
    })();

    // Fade-in sections on scroll
    (function () {
      const sections = document.querySelectorAll(".fade-section");
      if (!("IntersectionObserver" in window)) {
        sections.forEach((s) => s.classList.add("in-view"));
        return;
      }

      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              entry.target.classList.add("in-view");
              observer.unobserve(entry.target);
            }
          });
        },
        { threshold: 0.18 }
      );

      sections.forEach((s) => observer.observe(s));
    })();
  </script>
</body>
